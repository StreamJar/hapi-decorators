{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es6",
			"es2016",
			"es2017",
			"es2018"
		],
		"types": [
			"node",
		],
		"esModuleInterop": true,
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"declaration": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"outDir": "dist",
		"declarationDir": "dist",
		"experimentalDecorators": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		"dist",
	]
}
